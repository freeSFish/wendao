#FORM2

[活动时间]
time_list$ : ({ "2016-01-01-00:00:00", "EVERY_DAY(3)", 0, "2016-01-03-23:59:59" })

[broadcast_setting]
broadcast_list : ({ "during_task", "end_task" })

[during_task]
broadcast_start : "start_time"
interval        : 3600
broadcast_end   : "end_time(-100)"
message         : "#R【元旦】百花争艳#n活动开始啦，大家快前往#P活动大使#P处领取任务，完成任务后可获得丰厚的奖励哦。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
broadcast_start : "end_time(-1)"
interval        : 0
broadcast_end   : "end_time(0)"
message         : "#R【元旦】百花争艳#n活动圆满结束啦，感谢大家的参与。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

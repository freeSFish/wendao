#FORM2

[活动时间]
time_list$ : ({ "2013-04-15-00:00:00", "EVERY_DAY(7)", "EVERY_WEEK(0)", "2013-04-21-23:59:59" })

[broadcast_setting]
broadcast_list : ({ "end_task", "during_task" })

[end_task]
broadcast_start : "end_time(-1)"
interval        : 0
broadcast_end   : "end_time(0)"
message         : "七周年庆典已经结束了，鸿钧仙宠已向鸿钧老祖复命去了。庆典虽然结束了，但是希望大家能够将周年庆的激情继续延续下去！#0"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[during_task]
broadcast_start : "start_time(0)"
interval        : 3600
broadcast_end   : "end_time(-3599)"
message         : "鸿钧仙宠奉鸿钧老祖之命，特前来祝贺《问道》七周年之喜，现已在#Z天墉城(257,199)#Z处迎接各道友的挑战，大家快去#P活动大使#P处领取#R【七周年】一战到底#n任务吧。#50"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"


[setting]
start_time : "2014-03-12-00:00:00"
end_time   : "2014-03-14-23:59:59"

[broadcast_setting]
broadcast_list : ({ "broadcast_1", "broadcast_2", "broadcast_3" })

[broadcast_1]
broadcast_start : "start_time(0)"
interval        : 0
broadcast_end   : "start_time(1)"
message         : "#R【植树节】种树抗沙#n活动开始了，大家快去#P活动大使#P处参加活动吧。"

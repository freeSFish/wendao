[broadcast_2]
broadcast_start : "start_time(1)"
interval        : 1800
broadcast_end   : "end_time(-1)"
message         : "#R【植树节】种树抗沙#n活动正在火热的进行中，大家快去#P活动大使#P处领取#R桃树苗#n，为中洲的绿化出一份力吧。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[broadcast_3]
broadcast_start : "end_time(-1)"
interval        : 0
broadcast_end   : "end_time(0)"
message         : "#R【植树节】种树抗沙#n活动结束了，感谢大家为中洲绿化做出的贡献。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

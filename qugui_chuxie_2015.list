#FORM2

# 配置活动时间时需要注意，因为活动结束后还要留一天时间给玩家领奖，因此这里要比文档中多配置一天时间
[活动时间]
time_list$ : ({ "2015-08-28-00:00:00", "EVERY_DAY(2)", 0, "2015-08-29-23:59:59" })

[broadcast_setting]
broadcast_list : ({ "start_task", "during_task", "end_task" })

[start_task]
broadcast_start : "start_time"
interval        : 0
broadcast_end   : "start_time(100)"
message         : "#R【中元节】驱鬼除邪#n活动开始啦，大家快去#P活动大使#P处领取任务，驱除从地府来到中洲大地的恶鬼。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[during_task]
broadcast_start : "start_time(+1200)"
interval        : 1200
broadcast_end   : "end_time(-100)"
message         : "#R【中元节】驱鬼除邪#n活动开始啦，大家快去#P活动大使#P处领取任务，任务用时短的道友可以获得丰厚的道具奖励，还有几率获得稀有的精魄道具奖励哦。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
broadcast_start : "end_time"
interval        : 0
broadcast_end   : "end_time(100)"
message         : "#R【中元节】驱鬼除邪#n活动结束了，在众道友的帮助下，中洲大地的恶鬼已被驱逐回地府。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"


#FORM2

[setting]
start_time       : "2016-03-11-00:00:00"
end_time         : "2016-03-13-23:59:59"

[broadcast_setting]
broadcast_list : ({ "start_task1", "start_task2", "during_task1", "during_task2", "end_task1", "end_task2" })

[start_task1]
broadcast_start : "start_time(0)"
interval        : 0
broadcast_end   : "end_time"

#FORM2

[setting]
start_time       : "2014-06-17-00:00:00"
end_time         : "2014-06-18-23:59:59"

[broadcast_setting]
broadcast_list : ({ "during_task", "end_task" })

[during_task]
broadcast_start : "start_time(0)"
interval        : 3600
broadcast_end   : "end_time(-1)"
message         : "昔日谆谆教诲，今日句句在耳。往日慈祥的尊容，时时浮现。一日为师，终生为父。教师节来临之际，望众道友能满足各位师长的心愿，以报多年教导之恩。大家快到#P活动大使#P那领取相关任务，回门派拜访各位师长吧。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
broadcast_start : "end_time(-1)"
interval        : 0
broadcast_end   : "end_time(0)"
message         : "教师节活动已圆满结束，各位师长们对众道友送的节日礼物非常满意，感谢广大道友的积极参与。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

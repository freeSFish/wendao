#FORM2

[任务卷轴・切磋]
trigger_type : "item"
type : "saved"
affect : "single"
desc : "任务卷轴给予的指引任务，完成相应目标后可以获得奖励。"
log : "任务目标：和一位玩家进行#R切磋#n，在系统设置中可以打开切磋开关，按Alt+A并点击目标即可进行切磋。"
all_children : ({ "S1", "SX" })
timeout_task : 1
alias : "切磋"

[S0]
type : "null"
item : "任务卷轴・切磋"
action : "S1"
create_task : 1
task_noneed : 1

[S1]
type : "task_finish"
action : "SX"
task_name : "任务卷轴・切磋"
log : "任务目标：和一位玩家进行#R切磋#n，在系统设置中可以打开切磋开关，按Alt+A并点击目标即可进行切磋。"
bonus : "bonus1"
bonus1 : ({ "get_bonus_exp" })
weight : ({ 100 })

[get_bonus_exp]
type : "bonus"
oper : "all"
bonus_type : "exp"
num : "1 * 180000"

[SX]
type : "null"

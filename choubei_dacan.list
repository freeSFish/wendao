#FORM2

[活动时间]
time_list$ : ({ "2017-11-17-00:00:00", "EVERY_DAY(11)", "EVERY_WEEK(0)", "2017-11-27-23:59:59" })

[broadcast_setting]
broadcast_list : ({ "start_task", "during_task", "end_task" })

[start_task]
broadcast_start : "start_time(0)"
interval        : 0
broadcast_end   : "start_time(1)"
message         : "感恩节来临，为了筹备感恩节大餐，#P活动大使#P正在召集人手，道友你不妨也去尝试一下吧，会有丰厚的奖励哦！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[during_task]
broadcast_start : "start_time(3600)"
interval        : 3600
broadcast_end   : "end_time(-100)"
message         : "#R【感恩节】筹备大餐#n活动正在如火如荼地进行中，身手不凡的道友你赶快去找#P活动大使#P报名参加吧！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
broadcast_start : "end_time(-1)"
interval        : 0
broadcast_end   : "end_time(0)"
message         : "#R【感恩节】筹备大餐#n活动已经圆满结束，感谢众道友的鼎力支持！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

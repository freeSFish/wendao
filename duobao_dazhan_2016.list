#FORM2

[活动时间]
time_list$ : ({ "2016-01-01-00:00:00", "EVERY_DAY(3)", 0, "2016-01-03-23:59:59" })

[broadcast_setting]
broadcast_list : ({ "start_task", "end_task" })

[start_task]
broadcast_start : "start_time"
interval        : 0
broadcast_end   : "start_time(+1)"
message         : "#R【元旦】夺宝大战#n活动开始了，大家快做好战斗准备，加入夺宝队伍吧！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
broadcast_start : "end_time(-1)"
interval        : 0
broadcast_end   : "end_time(0)"
message         : "#R【元旦】夺宝大战#n活动圆满结束啦，感谢大家的参与。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

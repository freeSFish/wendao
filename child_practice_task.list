#FORM2

[setting]
start_time       : "2017-10-30-00:00:00"
end_time         : "2017-11-30-23:59:59"

[broadcast_setting]
broadcast_list:   ({ "broadcast_1", "broadcast_2" })

[broadcast_1]
broadcast_start : "start_time"
interval        : 7200
broadcast_end   : "end_time(-1)"
message         : "娃娃修炼活动正在进行中，等级达到80级的玩家参与游戏中的部分系统有几率额外获得道具#R娃娃修炼丹#n的奖励，使用该道具可以帮助娃娃进行修炼，从而获得娃娃经验值的奖励。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[broadcast_2]
broadcast_start : "end_time(-1)"
interval        : 0
broadcast_end   : "end_time"
message         : "娃娃修炼活动结束了，游戏中各系统已停止产出#R娃娃修炼丹#n，有多余道具的玩家仍然可以继续使用来修炼娃娃。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[活动时间]
time_list$ : ({ "2011-11-28-00:00", 172799, 0 })

[broadcast_setting]
broadcast_list : ({ "start_task", "during_task", "end_task" })

[start_task]
broadcast_start : "start_time"
interval        : 30
broadcast_end   : "start_time(+10)"
message         : "寒假到来了，寒假日记本活动开放啦，此活动有大量的经验奖励，还有机会获得商城道具，你还等什么？赶快来参加吧！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[during_task]
broadcast_start : "start_time(+1200)"
interval        : 1200
broadcast_end   : "end_time(-10)"
message         : "寒假到来了，妖怪们抢走了珍贵的#R寒假日记本#n。请大家找到后交给#P活动大使#P吧！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
broadcast_start : "end_time"
interval        : 30
broadcast_end   : "end_time(+10)"
message         : "本次寒假日记本活动圆满结束，请关注寒假期间的其他活动！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"


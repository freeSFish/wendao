#FORM2

#修改开始时间要同时修改version，累加即可，还要修改周年卡的道具描述
[setting]
version           : 1
start_time        : "2012-03-22-12:00:00"
end_time          : "2012-03-24-23:59:59"
exchange_end_time : "2012-03-26-23:59:59"

[broadcast_setting]
broadcast_list:   ({ "start_task", "during_task", "end_task" })

[start_task]
broadcast_start : "start_time"
interval        : 0
broadcast_end   : "start_time(+1)"
message         : "#R神兽拜福活动#n已经开启啦，大家赶紧去找#P活动大使#P吧！据说还有神兽、变异兽的奖励哦！大家赶紧参加吧！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[during_task]
broadcast_start : "start_time(3600)"
interval        : 3600
broadcast_end   : "end_time(-1)"
message         : "大家赶紧去找#P活动大使#P吧！#R神兽拜福活动#n正在火热地进行中，据说还有神兽、变异兽的奖励哦！大家赶紧来参加吧！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
broadcast_start : "end_time"
interval        : 0
broadcast_end   : "end_time(+1)"
broadcast_func  : "broadcast_end_time"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

#FORM2

[活动时间]
# 任务开始时间，持续时间，开启频率
time_list$ : ({ "2014-10-01-00:00:00", "EVERY_DAY(7)", 0, "2014-10-07-23:59:59" })

[broadcast_setting]
broadcast_list:   ({ "start_task", "end_task" })

[start_task]
broadcast_start   : "start_time"
interval          : 0
broadcast_end     : "end_time(-1)"
message           : "封神世界的妖孽掠夺了我们稀有的六阶坐骑、变异和神兽，众道友速去将其夺回，以免妖孽祸害人间！"
channel           : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
broadcast_start   : "end_time(-1)"
interval          : 0
broadcast_end     : "end_time"
message           : "本次#R【国庆节】全民动员#n活动圆满结束，感谢大家的参与！"
channel           : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"


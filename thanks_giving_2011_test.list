end_time   : "2011-10-20-23:59:59"

[broadcast_setting]
broadcast_list : ({ "start_task", "during_task", "before_end_task", "end_task" })

[start_task]
broadcast_start : "start_time"
interval        : 0
broadcast_end   : "start_time"
message         : "感恩节活动已经开始了，大家可以到#P感恩节活动大使|天墉城（240,187）#P那里了解感恩节活动。"

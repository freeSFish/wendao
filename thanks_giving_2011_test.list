[during_task]
broadcast_start : "start_time(1800)"
interval        : 1800
broadcast_end   : "end_time(-1)"
message         : "感恩节活动已经开始了，大家可以到#P感恩节活动大使|天墉城（240,187）#P那里了解感恩节活动。"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[before_end_task]
broadcast_start : "end_time(-600)"
interval        : 60
broadcast_end   : "end_time(-1)"
message         : "本次感恩节活动即将结束，感谢大家的参与。祝大家快乐游戏，快乐生活！"
channel         : "CHANNEL_SYSTEM | CHANNEL_NO_BROADCAST"

[end_task]
